<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bendezu.tinkofffintech">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.Activity"/>

        <activity android:name=".auth.AuthorizationActivity"
            android:theme="@style/AppTheme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".courses.performance_details.PerformanceDetailActivity"
            android:theme="@style/AppTheme.Activity"/>

        <activity android:name=".courses.rating_details.RatingDetailsActivity"
            android:theme="@style/AppTheme.Activity"/>

        <activity android:name=".courses.course_details.CourseDetailActivity"
            android:theme="@style/AppTheme.Activity"/>

    </application>

</manifest>