<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:listDivider">@drawable/divider</item>

        <item name="colorControlNormal">@color/colorTextWhite</item>
    </style>

    <style name="AppTheme.SplashTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    <style name="AppTheme.Activity">
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>
    <style name="AppTheme.Activity.AuthTheme">
        <item name="android:windowBackground">@color/colorSecondAccent</item>
        <item name="android:statusBarColor">@color/colorSecondAccent</item>
        <item name="android:navigationBarColor">@color/colorSecondAccent</item>
    </style>
    <style name="AppTheme.Activity.Main">
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="authorizationInputText">
        <item name="android:textColorHint">@color/colorTextWhite</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxBackgroundColor">#33FFFFFF</item>
        <item name="boxBackgroundMode">filled</item>
    </style>


    <style name="TextProfileBlock">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="TextProfileInfoLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#9299a2</item>
    </style>

    <style name="TextProfileInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccentDark</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="textHeader">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textDetails">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorSecondAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textWhite">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textLabel">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textLabel.Caps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="textValue">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="textValue.Small">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textValue.Small.White">
        <item name="android:textColor">@color/colorTextWhite</item>
    </style>
    <style name="textValue.Large">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="textValue.Large.White">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorTextWhite</item>
    </style>
    <style name="textValue.Caps">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="textHuge">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textRegular">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textRegular.Body">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

</resources>